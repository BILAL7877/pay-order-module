<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ================= LIST VIEW ================= -->
    <record id="view_pay_order_list" model="ir.ui.view">
        <field name="name">pay.order.list</field>
        <field name="model">pay.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="project_id"/>
                <field name="vendor_id"/>
                <field name="total_amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>


    <!-- ================= FORM VIEW ================= -->
    <record id="view_pay_order_form" model="ir.ui.view">
        <field name="name">pay.order.form</field>
        <field name="model">pay.order</field>
        <field name="arch" type="xml">
            <form string="Pay Order">

                <!-- ğŸ”¹ HEADER BUTTONS -->
                <header>

                    <button name="action_submit"
                            string="Submit"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                    <button name="action_review"
                            string="Review"
                            type="object"
                            invisible="state != 'submitted'"/>

                    <button name="action_approve"
                            string="Approve"
                            type="object"
                            invisible="state != 'review'"/>

                    <button name="action_reject"
                            string="Reject"
                            type="object"
                            invisible="state not in ('submitted','review')"/>

                    <button name="action_paid"
                            string="Mark Paid"
                            type="object"
                            invisible="state != 'approved'"/>

                    <!-- ğŸ’° ERP BUTTON -->
                    <button name="action_create_vendor_bill"
                            string="Create Vendor Bill"
                            type="object"
                            class="btn-success"
                            invisible="state != 'approved' or vendor_bill_id"/>

                    <field name="state" widget="statusbar"/>

                </header>

                <sheet>

                    <!-- ğŸ”¹ SMART BUTTON (MUST BE INSIDE SHEET) -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_vendor_bill"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-invoice"
                                invisible="not vendor_bill_id">
                            <field name="vendor_bill_id" widget="statinfo" string="Vendor Bill"/>
                        </button>
                    </div>

                    <!-- ğŸ”¹ BASIC INFO -->
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="project_id"/>
                        <field name="stage_id"/>
                        <field name="vendor_id"/>
                        <field name="vendor_mobile"/>
                    </group>

                    <!-- ğŸ”¹ NOTEBOOK -->
                    <notebook>

                        <page string="Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="sequence"/>
                                    <field name="description"/>
                                    <field name="uom_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="line_total" readonly="1"/>
                                </list>
                            </field>
                        </page>

                        <page string="Notes">
                            <field name="progress_notes"/>
                        </page>

                    </notebook>

                    <!-- ğŸ”¹ TOTAL -->
                    <group>
                        <field name="total_amount" readonly="1"/>
                    </group>

                </sheet>

            </form>
        </field>
    </record>

</odoo>
