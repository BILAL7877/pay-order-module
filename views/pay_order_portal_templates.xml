<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ===================== -->
    <!-- PAY ORDER LIST (PORTAL) -->
    <!-- ===================== -->
    <template id="portal_my_pay_orders" name="My Pay Orders">
        <t t-call="portal.portal_layout">
            <div class="container">

                <h2>My Pay Orders</h2>

                <a href="/my/pay_orders/new" class="btn btn-primary mb-3">
                    Create Pay Order
                </a>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Date</th>
                            <th>Project</th>
                            <th>Vendor</th>
                            <th>Total</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="pay_orders" t-as="po">
                            <tr>
                                <td>
                                    <a t-att-href="'/my/pay_orders/%s' % po.id">
                                        <t t-esc="po.name"/>
                                    </a>
                                </td>
                                <td><t t-esc="po.date"/></td>
                                <td><t t-esc="po.project_id.name"/></td>
                                <td><t t-esc="po.vendor_id.name"/></td>
                                <td><t t-esc="po.total_amount"/></td>
                                <td>
                                    <span class="badge bg-info">
                                        <t t-esc="po.state"/>
                                    </span>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

            </div>
        </t>
    </template>


    <!-- ===================== -->
    <!-- CREATE PAY ORDER PAGE -->
    <!-- ===================== -->
    <template id="portal_pay_order_create" name="Create Pay Order">
        <t t-call="portal.portal_layout">
            <div class="container">

                <h2>Create Pay Order</h2>

                <form action="/my/pay_orders/submit" method="post">

                    <!-- ðŸ” REQUIRED SECURITY TOKEN -->
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <div class="form-group mb-2">
                        <label>Project</label>
                        <select name="project_id" class="form-control" required="1">
                            <t t-foreach="projects" t-as="p">
                                <option t-att-value="p.id"><t t-esc="p.name"/></option>
                            </t>
                        </select>
                    </div>

                    <div class="form-group mb-2">
                        <label>Vendor</label>
                        <select name="vendor_id" class="form-control" required="1">
                            <t t-foreach="vendors" t-as="v">
                                <option t-att-value="v.id"><t t-esc="v.name"/></option>
                            </t>
                        </select>
                    </div>

                    <div class="form-group mb-2">
                        <label>Description</label>
                        <input type="text" name="description" class="form-control" required="1"/>
                    </div>

                    <div class="form-group mb-2">
                        <label>Quantity</label>
                        <input type="number" step="0.01" name="quantity" class="form-control" required="1"/>
                    </div>

                    <div class="form-group mb-2">
                        <label>Price</label>
                        <input type="number" step="0.01" name="price" class="form-control" required="1"/>
                    </div>

                    <div class="form-group mb-3">
                        <label>Progress Notes</label>
                        <textarea name="progress_notes" class="form-control"></textarea>
                    </div>

                    <button type="submit" class="btn btn-success">
                        Submit Pay Order
                    </button>

                </form>

            </div>
        </t>
    </template>


    <!-- ===================== -->
    <!-- PAY ORDER DETAIL PAGE -->
    <!-- ===================== -->
    <template id="portal_pay_order_detail" name="Pay Order Detail">
        <t t-call="portal.portal_layout">
            <div class="container">

                <h2>Pay Order <t t-esc="pay_order.name"/></h2>

                <p><strong>Date:</strong> <t t-esc="pay_order.date"/></p>
                <p><strong>Project:</strong> <t t-esc="pay_order.project_id.name"/></p>
                <p><strong>Vendor:</strong> <t t-esc="pay_order.vendor_id.name"/></p>
                <p><strong>Total:</strong> <t t-esc="pay_order.total_amount"/></p>
                <p><strong>Status:</strong> <t t-esc="pay_order.state"/></p>

                <h4>Lines</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Qty</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="pay_order.line_ids" t-as="l">
                            <tr>
                                <td><t t-esc="l.description"/></td>
                                <td><t t-esc="l.quantity"/></td>
                                <td><t t-esc="l.price_unit"/></td>
                                <td><t t-esc="l.line_total"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>

            </div>
        </t>
    </template>

</odoo>
